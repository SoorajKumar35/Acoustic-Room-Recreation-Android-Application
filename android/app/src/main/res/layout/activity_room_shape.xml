<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.bitbucket.arrc.arrc_acousticroomrecreation.RoomShapeActivity">

    <TextView
        android:id="@+id/roomshape_text"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/roomshape_processing"
        android:gravity="start"/>

    <Button
        android:id="@+id/roomshape_restart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/roomshape_restart"/>

</LinearLayout>
